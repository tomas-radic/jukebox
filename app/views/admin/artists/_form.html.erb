<div class="row">
  <div class="col">
    <%= form_for [:admin, @record] do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :country %>
        <%= f.collection_select(:country_id, Country.all, :id, :name, { include_blank: "None" }, class: "form-control") %>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
