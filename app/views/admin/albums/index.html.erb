<div class="row">
  <div class="col">
    Albums: <%= @records_count %> | <%= link_to "Create new", new_admin_album_path %>
  </div>
</div>
<div class="row mt-2">
  <div class="col">
    <ul class="list-group">
      <% @records.each do |record| %>
        <li class="list-group-item"><%= link_to album_title_with_year(record), admin_album_path(record) %></li>
      <% end %>
    </ul>
  </div>
</div>
